# Environment Variables Template for UK Planning Neighbor Responses
# Copy this file to .env.local and fill in your values

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="UK Planning Neighbor Responses"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Data Configuration (Local Development)
DATA_DIR="./data"
CACHE_TTL_MINUTES=5

# Security Configuration (Future Use)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Development Configuration
LOG_LEVEL=info
ENABLE_API_LOGGING=true

# Map Configuration
NEXT_PUBLIC_MAP_DEFAULT_LAT=54.3781
NEXT_PUBLIC_MAP_DEFAULT_LNG=-3.4360
NEXT_PUBLIC_MAP_DEFAULT_ZOOM=6

# Testing Configuration (Only for CI/CD)
# CI=true
# PLAYWRIGHT_BROWSERS_PATH=/path/to/browsers